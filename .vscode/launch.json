    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "lanzar frontend brave",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "preLaunchTask": "lanzar-browser",
            "postDebugTask": "detener-browser",
            "runtimeExecutable": "/usr/bin/brave-browser"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "lanzar mocha",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/",
            "preLaunchTask": "lanzar-mocha",
            "postDebugTask": "detener-mocha",
            "runtimeExecutable": "/usr/bin/brave-browser"
        }
    ]
} 